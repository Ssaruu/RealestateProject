<body>
    <section class="vh-100" style="background-color: #232d4d;">

        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/resource/photo_2022-08-08_18-14-37.jpg"
                                     alt="login form " class = "img-responsive"  style="border-radius: 1rem 0 0 1rem; height:450px" width="400px" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">SRN-RealEstate</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log into your account</h5>

                                        <div class="form-outline mb-4">
                                            <input id="userName" class="form-control form-control-lg" type="text" asp-for="userName" />
                                            <label for="userName" id="userNameLabel" class="label">User Name</label>
                                            <span asp-validation-for="userName"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input id="password" class="form-control form-control-lg" type="password" asp-for="password" />
                                            <label for="password" id="passwordLabel" class="label">Password</label>
                                            <span asp-validation-for="password"></span>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit" value="Submit">Login</button>
                                        </div>

                                       
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
